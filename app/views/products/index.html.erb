<h1>Lista de productos</h1>
<a href="<%= new_product_path %>" class="btn btn-success btn-icon-split bg-gradient-success">
<span class="icon text-white-50">
  <i class="fas fa-plus"></i>
</span>
<span class="text">Crear Producto</span></a>
<%= link_to 'Exportar a Excel', products_path(format: :xlsx), class:'btn btn-success bg-gradient-success' %>
<br><br>
<table class="table">
  <thead>
    <th>ID</th>
    <th>Nombre</th>
    <th>Referencia</th>
    <th>Cantidad</th>
    <th>Acciones</th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id%></td>
      <td><%= product.name%></td>
      <td><%= product.reference%></td>
      <td><%= product.quantity %></td>
      <td><%= link_to "Detalles", product_path(product), class:'btn btn-success bg-gradient-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>